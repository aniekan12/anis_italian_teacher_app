<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="37dp"
        android:fontFamily="@font/gilroy_extrabold"
        android:text="tu parle francais?!"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/red_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/yellow_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="146dp"
        android:backgroundTint="@color/yellow"
        android:tag="yellow"
        android:text="yellow"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/purple_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/red_btn"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/red_btn"
        android:layout_width="192dp"
        android:layout_height="101dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="6dp"
        android:backgroundTint="@color/red"
        android:tag="red"
        android:text="red"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/yellow_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/green_btn"
        android:layout_width="202dp"
        android:layout_height="113dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="357dp"
        android:backgroundTint="@color/green"
        android:tag="green"
        android:text="green"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/black_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yellow_btn" />

    <Button
        android:id="@+id/black_button"
        android:layout_width="187dp"
        android:layout_height="126dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="361dp"
        android:backgroundTint="@color/black"
        android:tag="black"
        android:text="black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/green_btn" />

    <Button
        android:id="@+id/purple_button"
        android:layout_width="200dp"
        android:layout_height="108dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="235dp"
        android:tag="purple"
        android:text="purple"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yellow_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>